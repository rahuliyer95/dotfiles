{
  "diagnostic.checkCurrentLine": true,
  "diagnostic.enableSign": true,
  // "diagnostic.errorSign": "", // 0xf467 nerd-font
  "diagnostic.virtualText": false,
  // "diagnostic.warningSign": "", // 0xf071 nerd-font
  "diagnostic-languageserver.filetypes": {
    "bzl": [
      "buildifier"
    ],
    "markdown": [
      "vale-md"
    ],
    "rst": [
      "vale-rst"
    ],
    "sh": "shellcheck",
    "text": [
      "vale"
    ]
  },
  "diagnostic-languageserver.formatFiletypes": {
    "bzl": "buildifier",
    "sh": "shfmt",
    "zsh": "shfmt"
  },
  "diagnostic-languageserver.formatters": {
    "buildifier": {
      "command": "buildifier",
      "args": [
        "-mode",
        "print_if_changed",
        "%file"
      ]
    },
    "shfmt": {
      "command": "shfmt",
      "args": [
        "-i",
        "2",
        "-bn",
        "-ci",
        "-sr",
        "-s"
      ]
    }
  },
  "diagnostic-languageserver.linters": {
    "buildifier": {
      "command": "buildifier",
      "debounce": 100,
      "isStdout": false,
      "isStderr": true,
      "args": [
        "-lint",
        "warn",
        "-mode",
        "check",
        "%file"
      ],
      "offsetLine": 0,
      "offsetColumn": 0,
      "sourceName": "buildifier",
      "formatLines": 1,
      "formatPattern": [
        "^([^#])* \\# (.*)$",
        {
          "sourceName": 1,
          "message": 2
        }
      ],
      "securities": {
        "warning": "warning",
        "error": "error"
      }
    },
    "vale-md": {
      "command": "vale",
      "isStdout": true,
      "isStderr": false,
      "debounce": 100,
      "args": [
        "--ext=.md",
        "--output=JSON"
      ],
      "offsetLine": 0,
      "offsetColumn": 0,
      "sourceName": "vale",
      "parseJson": {
        "errorsRoot": "stdin.md",
        "line": "Line",
        "column": "Span[0]",
        "endColumn": "Span[1]",
        "security": "Severity",
        "message": "[${Check}] ${Message}\n${Link}"
      },
      "securities": {
        "error": "error",
        "warning": "warning",
        "suggestion": "info"
      }
    },
    "vale-rst": {
      "command": "vale",
      "isStdout": true,
      "isStderr": false,
      "debounce": 100,
      "args": [
        "--ext=.rst",
        "--output=JSON"
      ],
      "offsetLine": 0,
      "offsetColumn": 0,
      "sourceName": "vale",
      "parseJson": {
        "errorsRoot": "stdin.rst",
        "line": "Line",
        "column": "Span[0]",
        "endColumn": "Span[1]",
        "security": "Severity",
        "message": "[${Check}] ${Message}\n${Link}"
      },
      "securities": {
        "error": "error",
        "warning": "warning",
        "suggestion": "info"
      }
    },
    "vale": {
      "command": "vale",
      "isStdout": true,
      "isStderr": false,
      "debounce": 100,
      "args": [
        "--output=JSON"
      ],
      "offsetLine": 0,
      "offsetColumn": 0,
      "sourceName": "vale",
      "parseJson": {
        "errorsRoot": "stdin.txt",
        "line": "Line",
        "column": "Span[0]",
        "endColumn": "Span[1]",
        "security": "Severity",
        "message": "[${Check}] ${Message}\n${Link}"
      },
      "securities": {
        "error": "error",
        "warning": "warning",
        "suggestion": "info"
      }
    }
  },
  "git.addGBlameToVirtualText": false,
  "git.enableGlobalStatus": false,
  "git.enableGutters": false,
  "git.realtimeGutters": false,
  "languageserver": {
    "terraform": {
      "command": "terraform-ls",
      "args": [
        "serve"
      ],
      "filetypes": [
        "terraform",
        "tf"
      ],
      "initializationOptions": {},
      "settings": {}
    }
  },
  "pyright.organizeimports.provider": "ruff",
  "pyright.inlayHints.functionReturnTypes": false,
  "pyright.inlayHints.parameterTypes": false,
  "pyright.inlayHints.variableTypes": false,
  "python.analysis.diagnosticMode": "openFilesOnly",
  "python.formatting.provider": "ruff",
  "python.formatting.ruffPath": "~/.pyenv/shims/ruff",
  "python.linting.ruffEnabled": true,
  "python.linting.ruffPath": "~/.pyenv/shims/ruff",
  "python.linting.flake8Enabled": false,
  "python.linting.pydocstyleEnabled": false,
  "snippets.ultisnips.pythonPrompt": false,
  "xml.format.enabled": true,
  "yaml.format.enable": true,
}
