{
  "basedpyright.analysis.typeCheckingMode": "off",
  "basedpyright.disableOrganizeImports": true,
  // "diagnostic.warningSign": "", // 0xf071 nerd-font
  "diagnostic-languageserver.filetypes": {
    "bzl": [
      "buildifier"
    ],
    "markdown": [
      "vale-md"
    ],
    "rst": [
      "vale-rst"
    ],
    "sh": "shellcheck",
    "text": [
      "vale"
    ]
  },
  "diagnostic-languageserver.formatFiletypes": {
    "bzl": "buildifier",
    "sh": "shfmt",
    "zsh": "shfmt"
  },
  "diagnostic-languageserver.formatters": {
    "buildifier": {
      "args": [
        "-mode",
        "print_if_changed",
        "%file"
      ],
      "command": "buildifier"
    },
    "shfmt": {
      "args": [
        "-i",
        "2",
        "-bn",
        "-ci",
        "-sr",
        "-s"
      ],
      "command": "shfmt"
    }
  },
  "diagnostic-languageserver.linters": {
    "buildifier": {
      "args": [
        "-lint",
        "warn",
        "-mode",
        "check",
        "%file"
      ],
      "command": "buildifier",
      "debounce": 100,
      "formatLines": 1,
      "formatPattern": [
        "^([^#])* \\# (.*)$",
        {
          "message": 2,
          "sourceName": 1
        }
      ],
      "isStderr": true,
      "isStdout": false,
      "offsetColumn": 0,
      "offsetLine": 0,
      "securities": {
        "error": "error",
        "warning": "warning"
      },
      "sourceName": "buildifier"
    },
  },
  "diagnostic.checkCurrentLine": true,
  "diagnostic.enableSign": true,
  // "diagnostic.errorSign": "", // 0xf467 nerd-font
  "diagnostic.virtualText": false,
  "git.addGBlameToVirtualText": false,
  "git.enableGlobalStatus": false,
  "git.enableGutters": false,
  "git.realtimeGutters": false,
  "languageserver": {
    "terraform": {
      "args": [
        "serve"
      ],
      "command": "terraform-ls",
      "filetypes": [
        "terraform",
        "tf"
      ],
      "initializationOptions": {},
      "settings": {}
    }
  },
  "mypy-type-checker.useDmypy": false,
  "snippets.ultisnips.pythonPrompt": false,
  "yaml.format.enable": true
}
